## .Xdefaults

#xvt*.transparent: true
#! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
#URxvt*.shading: 110

#urxvt*depth: 32
#urxvt*background: rgba:0000/0000/0200/c800
URxvt.geometry: 130x35

URxvt*termname: rxvt-256color
URxvt.imLocale: fi_FI.UTF-8
URxvt*font: xft:gohufont:pixelsize=12:antialias=true:hinting=true 
    URxvt*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=11:antialias=true:hinting=true
    URxvt.url-launcher:      /usr/bin/firefox-aurora
    URxvt.matcher.button:   1
    URxvt.urlLauncher:  xdg-open
    URxvt.matcher.button:   1
    URxvt.xftAntialias: true
    URxvt.perl-ext-common:  default,tabbedex
    URxvt.rotate-colors.files: ~/.Xresources,~/light.txt,~/dark.txt
    URxvt.keysym.M-C-n:   perl:rotate-colors:next
    URxvt.keysym.M-C-p:   perl:rotate-colors:prev
    URxvt.perl-lib /home/rolle/urxvt-perls/
    URxvt.scrollstyle:  plain
    URxvt.scrollBar: false   
    URxvt.secondaryScreen : true
    URxvt.scrollTtyOutput   :   false
    URxvt.scrollWithBuffer  :   true
    URxvt.scrollTtyKeypress :   true
#    URxvt.tabbed.tabbar-fg: 15
#    URxvt.tabbed.tabbar-bg: 0
    URxvt.tabbed.tab-fg:    15
    URxvt.tabbed.tab-bg:    8
    URxvt.cursorBlink:  true
    URxvt.cursorUnderline:  true

!Font
#URxvt*font:             	-*-tamsyn-medium-r-normal-*-12-87-100-100-c-60-iso8859-1
#URxvt*boldFont:         	-*-tamsyn-bold-r-normal-*-12-87-100-100-c-60-iso8859-1

URxvt*background: #2C2C2C
URxvt*foreground: #979797

!! black dark/light
*color0: #073642
*color8: #002b36

!! red dark/light
*color1: #dc322f
*color9: #cb4b16

!! green dark/light
*color2: #859900
*color10: #586e75

!! yellow dark/light
*color3: #b58900
*color11: #657b83

!! blue dark/light
*color4: #268bd2
*color12: #839496

!! magenta dark/light
*color5: #d33682
*color13: #6c71c4

!! cyan dark/light
*color6: #2aa198
*color14: #93a1a1

!! white dark/light
*color7: #eee8d5
*color15: #fdf6e3



