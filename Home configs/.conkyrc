# Conky settings #
background no
update_interval 1
double_buffer yes
no_buffers yes

# Window specifications #
own_window yes
own_window_title conky
#own_window_colour FFFFFF
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 180
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
background yes
 
#minimum_size 345 812 # 345 712
#maximum_width 345 1024
 
# Alignment #
alignment tr
gap_x 53 #58
gap_y 200 #39
 
border_inner_margin 15
border_outer_margin 0
 
# Graphics settings #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
 
# Text settings #
use_xft yes
xftalpha 0
xftfont Termsyn:size=11
 
override_utf8_locale yes
 
imlib_cache_size 0
 
# Color scheme #
#default_color 666666
 
color1 0099CC
color2 9933CC
color3 669900
color4 FF8800
color5 CC0000
color6 AAAAAA
color7 DDDDDD
color8 CC0033
#color9 CCCC66
color9 395573 #blue

TEXT
#CPU STUFF
#
#${goto 90}${font :size=100}${alignc}${time %H:%M}${font}
#
#${goto 60}${font HypatiaSansPro:weight=Regular:size=32}${alignc}${time %A, %B %d}${font}
#
#NETWORK STUFF
#
#
${if_existing /proc/net/route enp6s0}\
${font Sans:size=13}Network${color}${font Open Sans:pixelsize=11} \\ SSID : ${wireless_essid enp6s0}[Ethernet-cable] \\ ${addr enp6s0}
${color1}Up:${color} ${color3}${upspeed enp6s0}${color}${alignr}${color1}Down:${color} ${color3}${downspeed enp6s0}${color}
${upspeedgraph enp6s0 75,100 FF8800 FF8800}${alignr}${downspeedgraph enp6s0 75,100 FF8800 FF8800}
${color6}Sent:${color6} ${color6}${totalup enp6s0}${color}${alignr}${color6}Received:${color} ${color6}${totaldown enp6s0}${color}
${else}${if_existing /proc/net/route ppp0}\
${font Termsyn:size=15}Network${color}${font Termsyn:pixelsize=11} \\ SSID 4G Tikku \\ ${addr ppp0}
${color1}Up:${color} ${color3}${upspeed ppp0}${color}${alignr}${color1}Down:${color} ${color3}${downspeed ppp0}${color}
${upspeedgraph ppp0 75,135 FF8800 FF8800}${alignr}${downspeedgraph ppp0 75,135 FF8800 FF8800}
${color1}Sent:${color} ${color2}${totalup ppp0}${color}${alignr}${color1}Received:${color} ${color2}${totaldown ppp0}${color}
${endif}${endif}
${font Sans:size=13}Temps
${font Open Sans:pixelsize=11}CPU:${color4}${goto 335}${execp sensors coretemp-isa-0000 | grep 'Core 0' | cut -c16-17}${color1} °C${color}
${font Open Sans:pixelsize=11}GPU:${color4}${goto 335}${nvidia temp}${color1} °C${color} 
