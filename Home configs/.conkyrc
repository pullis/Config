# Conky settings #
background no
update_interval 1
double_buffer yes
no_buffers yes

# Window specifications #
own_window yes
own_window_title conky
#own_window_colour FFFFFF
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 180
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
background yes
 
#minimum_size 345 812 # 345 712
maximum_width 325 200
 
# Alignment #
alignment tr
gap_x 40 #58
gap_y 210 #39
 
border_inner_margin 15
border_outer_margin 0
 
# Graphics settings #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
 
# Text settings #
use_xft yes
xftalpha 0
xftfont Termsyn:size=11
 
override_utf8_locale yes
 
imlib_cache_size 0
 
# Color scheme #
#default_color 666666
 
color1 0099CC
color2 9933CC
color3 669900
color4 FF8800
color5 CC0000
color6 AAAAAA
color7 DDDDDD
color8 CC0033
#color9 CCCC66
color9 395573 #blue

TEXT
#CPU STUFF
#
#${goto 90}${font :size=100}${alignc}${time %H:%M}${font}
#
#${goto 60}${font HypatiaSansPro:weight=Regular:size=32}${alignc}${time %A, %B %d}${font}
#
#NETWORK STUFF
#
#
${if_existing /proc/net/route enp6s0}\
${font Sans:size=13}Network${color}${font Open Sans:pixelsize=11} \\ SSID : ${wireless_essid enp6s0}[Ethernet-cable] \\ ${addr enp6s0}
${color1}Up:${color} ${color3}${upspeed enp6s0}${color}${alignr}${color1}Down:${color} ${color3}${downspeed enp6s0}${color}
${upspeedgraph enp6s0 75,100 FF8800 FF8800}${alignr}${downspeedgraph enp6s0 75,100 FF8800 FF8800}
${color6}Sent:${color6} ${color6}${totalup enp6s0}${color}${alignr}${color6}Received:${color} ${color6}${totaldown enp6s0}${color}
${else}${if_existing /proc/net/route wwp0s29f7u2i3}\
${font Termsyn:size=15}Network${color}${font Termsyn:pixelsize=11} \\ SSID : 4G Tikku \\ ${addr wwp0s29f7u2i3}
${color1}Up:${color} ${color3}${upspeed wwp0s29f7u2i3}${color}${alignr}${color1}Down:${color} ${color3}${downspeed wwp0s29f7u2i3}${color}
${upspeedgraph wwp0s29f7u2i3 75,135 FF8800 FF8800}${alignr}${downspeedgraph wwp0s29f7u2i3 75,135 FF8800 FF8800}
${color1}Sent:${color} ${color2}${totalup wwp0s29f7u2i3}${color}${alignr}${color1}Received:${color} ${color2}${totaldown wwp0s29f7u2i3}${color}
${else}${if_existing /proc/net/route wwan0}\
${font Termsyn:size=15}Network${color}${font Termsyn:pixelsize=11} \\ SSID : 4G Tikku \\ ${addr wwan0}
${color1}Up:${color} ${color3}${upspeed wwan0}${color}${alignr}${color1}Down:${color} ${color3}${downspeed wwan0}${color}
${upspeedgraph wwan0 75,135 FF8800 FF8800}${alignr}${downspeedgraph wwan0 75,135 FF8800 FF8800}
${color1}Sent:${color} ${color2}${totalup wwan0}${color}${alignr}${color1}Received:${color} ${color2}${totaldown wwan0}${color}
${endif}${endif}${endif}

${font Sans:size=13}Temps
${font Open Sans:pixelsize=11}CPU:${color4}${goto 315}${execp sensors coretemp-isa-0000 | grep 'Core 0' | cut -c16-17}${color1} °C ${color}
${font Open Sans:pixelsize=11}GPU:${color4}${goto 315}${nvidia temp}${color1} °C ${color} 

${font Sans:size=13}Storage
${font Open Sans:pixelsize=11}Root ${alignr}${color4}${fs_used /}${color} / ${color1}${fs_size}${color}
${fs_bar 10,325 /}
${font Open Sans:pixelsize=11}Seiska $alignr}${color4}${fs_used /media/Seiska}${color} / ${color1}${fs_size /media/Seiska}${color}
${fs_bar 10,325 /media/Seiska}
${font Open Sans:pixelsize=11}SSD ${alignr}${color4}${fs_used /media/SSD}${color} / ${color1}${fs_size /media/SSD}${color}
